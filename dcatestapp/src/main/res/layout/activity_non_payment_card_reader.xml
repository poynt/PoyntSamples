<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- dummy layout to prevent the keyboard from popping out -->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <CheckBox
        android:id="@+id/newConnectionOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Enable New Connection option logic.\nUsing incorrect interfaces may break some tests" />

    <LinearLayout
        android:id="@+id/connectionInterfaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/interfaceCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="CL" />

        <CheckBox
            android:id="@+id/interfaceEMV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="EMV" />


        <CheckBox
            android:id="@+id/interfaceGSM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="GSM" />


        <CheckBox
            android:id="@+id/interfaceSLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="SLE" />

        <CheckBox
            android:id="@+id/interfaceMSR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="MSR" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misc Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/connectToCard"
                    style="@style/DCAButton"
                    android:text="Connect" />

                <Button
                    android:id="@+id/disconnectFromCard"
                    style="@style/DCAButton"
                    android:text="Disconnect (&#38; Remove)" />

                <Button
                    android:id="@+id/checkIfCardInserted"
                    style="@style/DCAButton"
                    android:text="Check Card Presence" />

                <Button
                    android:id="@+id/abort"
                    style="@style/DCAButton"
                    android:text="Abort (Cancel)" />

                <Button
                    android:id="@+id/readIMSI"
                    style="@style/DCAButton"
                    android:text="Read IMSI" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/apduDataInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/exchangeAPDU"
            android:inputType="text"
            android:lines="1"
            android:text="04A0A40000023F0000" />

        <Button
            android:id="@+id/exchangeAPDU"
            style="@style/DCAButton"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Send APDU" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/apduListDataInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/exchangeAPDUList"
            android:hint="AAAA,9000;BBBB;CCCC,9000"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/exchangeAPDUList"
            style="@style/DCAButton"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Send APDU list" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etBinRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnSendBinRange"
            android:inputType="text"
            android:lines="1"
            android:maxLength="12"
            android:text="000000111111" />

        <Button
            android:id="@+id/btnSendBinRange"
            style="@style/DCAButton"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Send Bin Range" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CT EMV Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ctSuccessfulTransaction"
                    style="@style/DCAButton"
                    android:text="Successful" />

                <Button
                    android:id="@+id/ctFileNotFound"
                    style="@style/DCAButton"
                    android:text="File Not Found" />

                <Button
                    android:id="@+id/ctCardRejectionMaster"
                    style="@style/DCAButton"
                    android:text="Reject" />

                <Button
                    android:id="@+id/ctExchangeApduList"
                    style="@style/DCAButton"
                    android:text="Exchange CT APDU List" />

                <Button
                    android:id="@+id/ctPymtTransactionDuringDCA"
                    style="@style/DCAButton"
                    android:text="Pymt trn during DCA PoyntC" />

                <Button
                    android:id="@+id/ctXAPDU"
                    style="@style/DCAButton"
                    android:text="X APDU" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CL EMV Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clSuccessfulTransaction"
                style="@style/DCAButton"
                android:text="Successful" />

            <Button
                android:id="@+id/clFileNotFound"
                style="@style/DCAButton"
                android:text="File Not Found" />

            <Button
                android:id="@+id/clCardRejectionMaster"
                style="@style/DCAButton"
                android:text="Reject" />


            <Button
                android:id="@+id/clExchangeApduList"
                style="@style/DCAButton"
                android:text="Exchange CL APDU List" />

            <Button
                android:id="@+id/clPymtTransactionDuringDCA"
                style="@style/DCAButton"
                android:text="Pymt trn during DCA" />

            <Button
                android:id="@+id/clXAPDU"
                style="@style/DCAButton"
                android:text="X APDU" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO 7816 (GSM) Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/isoSuccessfulTransaction"
                    style="@style/DCAButton"
                    android:text="Successful" />

                <Button
                    android:id="@+id/isoFileNotFound"
                    style="@style/DCAButton"
                    android:text="File Not Found" />

                <Button
                    android:id="@+id/isoCardRejectionMaster"
                    style="@style/DCAButton"
                    android:text="Reject" />


                <Button
                    android:id="@+id/isoExchangeApduList"
                    style="@style/DCAButton"
                    android:text="Exchange ISO APDU List" />

                <Button
                    android:id="@+id/isoTrnDuringDCA"
                    style="@style/DCAButton"
                    android:text="Pymt trn during DCA" />

                <Button
                    android:id="@+id/isoXAPDU"
                    style="@style/DCAButton"
                    android:text="X APDU" />

                <Button
                    android:id="@+id/isoItalianHealthCards"
                    style="@style/DCAButton"
                    android:text="Test Italian Health Card" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLE Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sle401"
                style="@style/DCAButton"
                android:text="401" />

            <Button
                android:id="@+id/sle402"
                style="@style/DCAButton"
                android:text="402" />

            <Button
                android:id="@+id/sle403"
                style="@style/DCAButton"
                android:text="403" />

            <Button
                android:id="@+id/sle404"
                style="@style/DCAButton"
                android:text="404" />

            <Button
                android:id="@+id/sle405"
                style="@style/DCAButton"
                android:text="405" />

            <Button
                android:id="@+id/sle406"
                style="@style/DCAButton"
                android:text="406" />


            <Button
                android:id="@+id/sle407"
                style="@style/DCAButton"
                android:text="407" />

            <Button
                android:id="@+id/sle408"
                style="@style/DCAButton"
                android:text="408" />

            <Button
                android:id="@+id/sle409"
                style="@style/DCAButton"
                android:text="409" />

            <Button
                android:id="@+id/sleXAPDU"
                style="@style/DCAButton"
                android:text="X APDU" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mifare Classic Test" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/testMifare"
                style="@style/DCAButton"
                android:text="Test Mifare" />

            <Button
                android:id="@+id/testMifareAfterPowerCycle"
                style="@style/DCAButton"
                android:text="Test Mifare (after power cycle)" />
        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mifare Desfire Tests" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/desfire601"
                style="@style/DCAButton"
                android:text="601"/>

            <Button
                android:id="@+id/desfire602"
                style="@style/DCAButton"
                android:text="602" />

            <Button
                android:id="@+id/desfire603"
                style="@style/DCAButton"
                android:text="603" />

            <Button
                android:id="@+id/desfire604"
                style="@style/DCAButton"
                android:text="604" />

            <Button
                android:id="@+id/desfire605"
                style="@style/DCAButton"
                android:text="605" />

            <Button
                android:id="@+id/desfire606"
                style="@style/DCAButton"
                android:text="606" />

            <Button
                android:id="@+id/desfire607"
                style="@style/DCAButton"
                android:text="607" />

            <Button
                android:id="@+id/desfire610"
                style="@style/DCAButton"
                android:text="610" />

            <Button
                android:id="@+id/desfire611"
                style="@style/DCAButton"
                android:text="611" />

            <Button
                android:id="@+id/desfire612"
                style="@style/DCAButton"
                android:text="612" />

            <Button
                android:id="@+id/desfire613"
                style="@style/DCAButton"
                android:text="613" />

            <Button
                android:id="@+id/desfire614"
                style="@style/DCAButton"
                android:text="614" />

            <Button
                android:id="@+id/desfire615"
                style="@style/DCAButton"
                android:text="615" />

            <Button
                android:id="@+id/desfire616"
                style="@style/DCAButton"
                android:text="616" />

            <Button
                android:id="@+id/desfire617"
                style="@style/DCAButton"
                android:text="617" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <ScrollView
        android:id="@+id/demoScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/consoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </ScrollView>

</LinearLayout>